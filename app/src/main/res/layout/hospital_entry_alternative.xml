<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hospital_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="San Martino" />

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="10:20" />
    </LinearLayout>

    <TextView
        android:id="@+id/waiting_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hospital_layout"
        android:text="Attesa"

        android:textAlignment="center"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/waiting_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/waiting_label"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/waiting_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/waiting_green"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/waiting_yellow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/waiting_red"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            tools:text="10" />
    </LinearLayout>

    <TextView
        android:id="@+id/running_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/waiting_bars"
        android:text="Visita"

        android:textAlignment="center"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/running_label"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/running_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/running_green"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/running_yellow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/running_red"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            tools:text="10" />
    </LinearLayout>

</RelativeLayout>