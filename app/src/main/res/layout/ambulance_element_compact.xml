<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:background="@color/postazioni_list_bck"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    android:paddingBottom="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="85dp">

    <TextView
        android:id="@+id/tot_missions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect_red"
        tools:text="9999" />

    <TextView
        android:id="@+id/ambulance_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <ImageView
        android:id="@+id/rect_red"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rect_green"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square_green"
        app:layout_constraintRight_toLeftOf="@+id/rect_yellow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rect_yellow"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square_yellow"
        app:layout_constraintRight_toLeftOf="@+id/rect_red"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rect_white"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square_white"
        app:layout_constraintRight_toLeftOf="@+id/rect_green"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tot_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rect_red"
        app:layout_constraintLeft_toRightOf="@+id/rect_yellow"
        app:layout_constraintRight_toRightOf="@+id/rect_red"
        app:layout_constraintTop_toTopOf="@+id/rect_red"
        tools:text="9999" />

    <TextView
        android:id="@+id/tot_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rect_yellow"
        app:layout_constraintLeft_toLeftOf="@+id/rect_yellow"
        app:layout_constraintRight_toRightOf="@+id/rect_yellow"
        app:layout_constraintTop_toTopOf="@+id/rect_yellow"
        tools:text="9999" />

    <TextView
        android:id="@+id/tot_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rect_green"
        app:layout_constraintLeft_toRightOf="@+id/rect_white"
        app:layout_constraintRight_toLeftOf="@+id/rect_yellow"
        app:layout_constraintTop_toTopOf="@+id/rect_green"
        tools:text="9999" />

    <TextView
        android:id="@+id/tot_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rect_white"
        app:layout_constraintLeft_toLeftOf="@+id/rect_white"
        app:layout_constraintRight_toRightOf="@+id/rect_white"
        app:layout_constraintTop_toTopOf="@+id/rect_white"
        tools:text="9999" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/mezzo"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tot_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/worked_real_days"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambulance_no" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/total"
        app:layout_constraintBottom_toBottomOf="@+id/tot_missions"
        app:layout_constraintRight_toLeftOf="@+id/tot_missions"
        app:layout_constraintTop_toBottomOf="@+id/rect_red" />

</android.support.constraint.ConstraintLayout>
