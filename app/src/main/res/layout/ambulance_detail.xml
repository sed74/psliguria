<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/emergency_code"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/emergency_code_circle"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/code_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />

    <TextView
        android:id="@+id/croce_name_label"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:text="@string/mission_no"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/croce_name"
        app:layout_constraintTop_toBottomOf="@+id/croce_name_label"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sintesi"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/croce_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_no" />

    <TextView
        android:id="@+id/sintesi"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/location"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/croce_name" />

    <TextView
        android:id="@+id/mission_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/croce_name_label"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/code_label"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/emergency_code"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="codice Rosso" />

</android.support.constraint.ConstraintLayout>